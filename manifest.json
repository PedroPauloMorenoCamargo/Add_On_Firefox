{
  "manifest_version": 2,
  "name": "Third-Party Domain Detector",
  "version": "1.0",
  "description": "Detect and list third-party domain connections during web navigation.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "storage",
    "tabs",
    "cookies",
    "*://*/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": ["background/third_party.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup/popup.html"
  }
}

